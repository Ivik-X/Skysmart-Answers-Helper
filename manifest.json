{
  "manifest_version": 3,
  "name": "Skysmart Answers Helper",
  "version": "2.0",
  "description": "Помощник для заданий на edu.skysmart.ru",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://edu.skysmart.ru/lesson/homework/*"],
      "js": ["content.js"]
    }
  ],
  "icons": {
    "16": "icons/icon16.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  }
}